<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("logo240x62.jpg", class:"timerecipe-icon"), "/" %> 
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to 'ユーザー写真', "#", class: "user-photo", id: "user-photo" %></li>
        <li><%= link_to '投稿', "#", class: "post-btn" %></li>
      <% else %>  
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
    <ul class="show-lists hidden" id="show-lists">
      <li class="pull-down-list">レシピ管理</li>
      <li class="pull-down-list">いいねしたレシピ</li>
      <li class="pull-down-list">アカウント設定</li>
      <li class="pull-down-list">ログアウト</li>
    </ul>

  </div>
</header>